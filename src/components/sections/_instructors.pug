section#instructors
    .container
        h2.h2.text-center Наша команда
        #instructors__carousel.carousel.slide(data-bs-ride='carousel')
            .carousel-inner
                each instructor, i in instructors
                    .carousel-item(class= i ? '' : 'active')
                        .instructor__card.d-md-flex
                            .instructor__image-box
                                img.instructor__image(src=require('../../' + instructor.imageSrc) alt='Фотография' loading="lazy")
                                p.instructor__name.text-center.d-none.d-md-block.d-lg-none= instructor.name
                            div
                                h3.h3.text-center.text-md-start= instructor.position
                                p.instructor__name.text-center.text-md-start.d-block.d-md-none.d-lg-block= instructor.name
                                hr.instructor__line
                                p.instructor__description.text-md-start= instructor.description
            .carousel-indicators.indicators-light
                each _, i in instructors
                    button(class= i ? '' : 'active' type='button' data-bs-target='#instructors__carousel' data-bs-slide-to=i aria-current='true' aria-label=`Слайд ${i}`)
            button.carousel-control-prev.d-none.d-md-block(type='button', data-bs-target='#instructors__carousel', data-bs-slide='prev')
                span.carousel-control-prev-icon(aria-hidden='true')
                    svg(width='21' height='59' viewBox='0 0 21 59' fill='none' xmlns='http://www.w3.org/2000/svg')
                        path(d='M19.411 1L0.999958 29.5' stroke='#878787' stroke-width='2')
                        path(d='M0.999878 29L19.4109 57.5' stroke='#878787' stroke-width='2')
                span.visually-hidden Предыдущий
            button.carousel-control-next.d-none.d-md-block(type='button', data-bs-target='#instructors__carousel', data-bs-slide='next')
                span.carousel-control-next-icon(aria-hidden='true')
                    svg(width='21' height='59' viewBox='0 0 21 59' fill='none' xmlns='http://www.w3.org/2000/svg')
                        path(d='M1.58899 1L20 29.5' stroke='#878787' stroke-width='2')
                        path(d='M20.0001 29L1.58907 57.5' stroke='#878787' stroke-width='2')
                span.visually-hidden Следующий
